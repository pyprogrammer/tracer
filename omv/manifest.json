{
  "manifest_version": 2,

  "name": "Overlapping Multiverses",
  "description": "This extension creates multiple overlapping universes. Use with care.",
  "version": "1.0",

  "browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},

  "permissions": [
    "webRequest", "webRequestBlocking", "webNavigation", "tabs", "<all_urls>"
  ],

  "background": {
    "scripts": ["background.js"]
  },

   "web_accessible_resources": [
      "tracer.js",
      "error-stack-parser.min.js",
      "blacklist.js",
      "sandbox.js",
      "error-stack-parser.min.js"
   ],

	"content_scripts": [
      {
         "matches": ["http://*/*", "https://*/*"],
         "js": ["sandbox.js", "loader.js"],
        "run_at": "document_start"
      }
   ]
}
