{
  "manifest_version": 2,

  "name": "The Planetarium",
  "description": "Contents volatile. Do not shake.",
  "version": "1.0",

  "browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},

  "permissions": [
    "webRequest", "webRequestBlocking", "webNavigation", "tabs", "<all_urls>"
  ],

  "background": {
    "scripts": ["background.js"]
  },

   "web_accessible_resources": [
      "bower_components/stackframe/stackframe.js",
      "bower_components/error-stack-parser/error-stack-parser.js",
      "bower_components/esprima/esprima.js",
      "blacklist.js",
      "sandbox.js",
      "tracer.js"
   ],

	"content_scripts": [
      {
         "matches": ["http://*/*", "https://*/*"],
         "js": [
            "bower_components/esprima/esprima.js",
            "sandbox.js",
            "loader.js"
         ],
         "run_at": "document_start"
      }
   ]
}
